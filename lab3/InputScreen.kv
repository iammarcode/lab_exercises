<InputScreen>:
    
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)

        MDTextField:
            id: txt_fullname
            hint_text: 'Full name'        

        MDTextField:
            id: txt_email
            hint_text: 'Email address'

        MDTextField:
            id: txt_password
            hint_text: 'Password'
            password: True

        MDTextField:
            id: txt_reenter_password
            hint_text: 'Re-enter Password'
            password: True

        MDTextField:
            id: txt_phone_number
            hint_text: 'Phone number'
            password: True    

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(48)  # Set a fixed height for the button bar

            MDRaisedButton:
                text: 'Clear'
                on_press: root.clear()

            MDRaisedButton:
                text: 'Register'
                on_press: root.register()

            MDRaisedButton:
                text: 'Cancel'
                on_press: root.cancel()
        
        Widget: ### fill the empty space of BoxLayout
